<h1>New Post</h1>

<%= form_with(model: [@current_user, @post], url: user_post_create_path(@current_user), method: :post, html: { class: "form" }) do |form| %>

<%= form.label :title %>
<%= form.text_field :title %>

<%= form.label :text %>
<%= form.text_area :text %>

<%= form.submit "Create Post" %>

<% end %>